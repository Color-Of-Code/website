{
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "singleQuote": true
      }
    },
    {
      "files": ["*.js"],
      "options": {
        "parser": "babel",
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "parser": "json"
      }
    }
  ]
}
